# EditorConfig for cross-editor consistency
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.toml]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2
